<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/title_ics"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.preference.DropDownPreference android:entries="@array/upload_data_using_list" android:title="@string/upload_data_using" android:key="key_upload_data_using" android:entryValues="@array/upload_data_using_list" />
    <androidx.preference.PreferenceCategory android:title="Developer Options">
        <androidx.preference.SwitchPreference android:title="Debug Logging" android:key="key_debug_logging" android:defaultValue="false" android:summary="Enable verbose debug logging" />
        <androidx.preference.SwitchPreference android:title="Developer Features" android:key="key_developer_features" android:defaultValue="false" android:summary="Show all developer options" />
        <androidx.preference.Preference android:title="Debug Tools" android:key="key_debug_tools" android:summary="Access debug and diagnostic tools" />
        <androidx.preference.Preference android:title="Export Databases" android:key="key_export_databases" android:summary="Export internal databases for analysis" />
        <androidx.preference.Preference android:title="Import Databases" android:key="key_import_databases" android:summary="Import databases from external storage" />
        <androidx.preference.SwitchPreference android:title="Show Hidden Features" android:key="key_show_hidden" android:defaultValue="false" android:summary="Display all hidden menu options" />
        <androidx.preference.Preference android:title="QA Provider" android:key="key_qa_provider" android:summary="Access QA and testing features" />
        <androidx.preference.Preference android:title="Inference Engine Debug" android:key="key_inference_debug" android:summary="Debug inference engine operations" />
    </androidx.preference.PreferenceCategory>
    <androidx.preference.PreferenceCategory>
        <androidx.preference.Preference android:title="@string/title_about" android:key="key_about_unbundled" />
    </androidx.preference.PreferenceCategory>
</PreferenceScreen>
